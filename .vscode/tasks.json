{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build C++",
            "command": "clang++-18",
            "args": [
                "--std=c++20",
                "-g",
                "-Wall",
                // "-fstandalone-debug",
                // "-fsanitize=address",
                // "-frtti",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build CMake",
            "command": "cmake",
            "args": [
                "--build",
                "build",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}