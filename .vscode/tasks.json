{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build C++",
            "command": "clang++-18",
            "args": [
                "--std=c++20",
                "-g",
                "-Wall",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "hide": true
        },
        {
            "type": "shell",
            "label": "Build CMake",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "hide": true
        },
        {
            "type": "shell",
            "label": "touch test",
            "command": "./start.sh",
            "args": [
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "hide": false,
            "problemMatcher": []
        }
    ]
}